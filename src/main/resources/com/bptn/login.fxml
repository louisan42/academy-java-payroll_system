<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.bptn.controllers.LoginController">
    <padding>
        <Insets top=" 20" right=" 20" bottom=" 20" left=" 20" />
    </padding>
    <children>
        <Label text=" Login" style=" -fx-font-size: 24px; -fx-font-weight: bold;" />

        <TextField fx:id="usernameField" />
        <PasswordField fx:id="passwordField" />

        <Button fx:id="loginButton" text="Login" onAction="#switchToPrimary" />

        <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
    </children>
</VBox>